<style>
.loader {
        position: fixed;
        left: 0px;
        top: 0px;
        width: 100%;
        height: 100%;
        z-index: 9999;
        background: Url("/Content/images/pageLoader.gif") 50% 50% no-repeat rgb(249,249,249);
        opacity: .8;
    }
 #ex1Slider .slider-selection {
	    background: #ff9999;
    }
</style>
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<body>
    <section class="container">
        <div id="utamaFrm" class="form-horizontal">
            <h2>Table KPI</h2>
            <div class="row">
                <div class="col-md-12">
                    <button class="btn btn-info btn-lg btn-block" onclick="clearTextBox();">Add New KPI</button>
                </div>
            </div>
            <br />
            <table id="MasterInfo" class="table table-bordered  table-hover">
                <thead>
                    <tr>
                        <th>Year</th>
                        <th>Desc</th>
                        <th>Grade</th>
                        <th>Target</th>
                        <th>Edit</th>
                        <th>Delete</th>
                    </tr>
                </thead>
                <tbody id="tbodytblKPI"></tbody>
            </table>
        </div> <!--Form utama-->
    </section>
    <div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header alert-success">
                    <button type="button" class="close" data-dismiss="modal">×</button>
                    <h4 class="modal-title" id="myModalLabel">Add New KPI</h4>
                </div>
                <div class="modal-body">
                    <form>
                        <div class="form-group">
                            <div class="row">
                                <div class="col-sm-4">
                                    <label for="id">ID</label>
                                </div>
                                <div class="col-sm-8">
                                    <input type="text" class="form-control" id="id" placeholder="Id" disabled="disabled" />
                                </div>
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="row">
                                <div class="col-sm-4">
                                    <label for="year">Year :</label>
                                </div>
                                <div class="col-sm-8">
                                    <input id="year" name="year" type="number" class="form-control" placeholder="Year" />
                                </div>
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="row">
                                <div class="col-sm-4">
                                    <label for="cbdesc">Description :</label>
                                </div>
                                <div class="col-sm-8">
                                    <select class="form-control" id="cbdesc"></select>  
                                </div>
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="row">
                                <div class="col-sm-4">
                                    <label for="grade">Grade :</label>
                                </div>
                                <div class="col-sm-6">
                                    <input id="grade" data-slider-id='ex1Slider' type="text" data-slider-min="0" data-slider-max="100" data-slider-step="1" data-slider-value="50" />
                                </div>
                                <div class="col-sm-2">
                                    <span id="ex1aSlider"><span id="ex1a" class="pull-right" style="color:blue;font-size:medium">50</span></span>
                                </div>
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="row">
                                <div class="col-sm-1">
                                    <label for="jan">Jan</label>
                                </div>
                                <div class="col-sm-3">
                                    <input id="jan" name="jan" type="number" class="form-control" placeholder="KPI Jan" />
                                </div>
                                <div class="col-sm-1">
                                    <label for="feb">Feb</label>
                                </div>
                                <div class="col-sm-3">
                                    <input id="feb" name="feb" type="number" class="form-control" placeholder="KPI Feb" />
                                </div>
                                <div class="col-sm-1">
                                    <label for="mar">Mar</label>
                                </div>
                                <div class="col-sm-3">
                                    <input id="mar" name="mar" type="number" class="form-control" placeholder="KPI Mar" />
                                </div>
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="row">
                                <div class="col-sm-1">
                                    <label for="apr">Apr</label>
                                </div>
                                <div class="col-sm-3">
                                    <input id="apr" name="apr" type="number" class="form-control" placeholder="KPI Apr" />
                                </div>
                                <div class="col-sm-1">
                                    <label for="may">May</label>
                                </div>
                                <div class="col-sm-3">
                                    <input id="may" name="may" type="number" class="form-control" placeholder="KPI May" />
                                </div>
                                <div class="col-sm-1">
                                    <label for="jun">Jun</label>
                                </div>
                                <div class="col-sm-3">
                                    <input id="jun" name="jun" type="number" class="form-control" placeholder="KPI Jun" />
                                </div>
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="row">
                                <div class="col-sm-1">
                                    <label for="jul">Jul</label>
                                </div>
                                <div class="col-sm-3">
                                    <input id="jul" name="jul" type="number" class="form-control" placeholder="KPI Jul" />
                                </div>
                                <div class="col-sm-1">
                                    <label for="aug">Aug</label>
                                </div>
                                <div class="col-sm-3">
                                    <input id="aug" name="aug" type="number" class="form-control" placeholder="KPI Aug" />
                                </div>
                                <div class="col-sm-1">
                                    <label for="sep">Sep</label>
                                </div>
                                <div class="col-sm-3">
                                    <input id="sep" name="sep" type="number" class="form-control" placeholder="KPI Sep" />
                                </div>
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="row">
                                <div class="col-sm-1">
                                    <label for="oct">Oct</label>
                                </div>
                                <div class="col-sm-3">
                                    <input id="oct" name="oct" type="number" class="form-control" placeholder="KPI Oct" />
                                </div>
                                <div class="col-sm-1">
                                    <label for="nov">Nov</label>
                                </div>
                                <div class="col-sm-3">
                                    <input id="nov" name="nov" type="number" class="form-control" placeholder="KPI Nov" />
                                </div>
                                <div class="col-sm-1">
                                    <label for="dec">Dec</label>
                                </div>
                                <div class="col-sm-3">
                                    <input id="dec" name="dec" type="number" class="form-control" placeholder="KPI Dec" />
                                </div>
                            </div>
                        </div>
                    </form>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-primary" id="btnAdd" data-dismiss="modal" onclick="CRUDkpi('I');">Add</button>
                    <button type="button" class="btn btn-primary" id="btnUpdate" data-dismiss="modal" onclick="CRUDkpi('U');">Update</button>
                    <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                </div>
            </div>
        </div>
        <div class="loader"></div>
    </div>   
</body>

<script>
    var urlKPI = "@Url.Content("~/Dashboard")";
    var update = 0;
    $(document).ready(function () {
        $('.datetimepicker').datetimepicker({
            format: 'DD-MM-YYYY'
        });
        LoadDesc();
        MainLoad();
        $('#utamaFrm').show();
    });

    $('#grade').slider({
        formatter: function (value) {
            $("#ex1a").text(value);
            return 'Current value: ' + value;
        }
    });

   
    function LoadDesc() {
        var tr;
        var kpiObj = {
            id: 0,
            ch: 'S'
        }
        $.ajax({
            url: urlKPI + "/viewKPIDesc/",
            data: JSON.stringify(kpiObj),
            contentType: "application/json;charset=utf-8",
            success: function (result) {
                $.each(result, function (key, item) {
                    var html = '';
                    $.each(result, function (key, item) {
                        html += '<option value=' + item.iddesc + '>' + item.desc + ' # ' + item.group + '</option>';
                    });
                    $('#cbdesc').html(html);

                });
            },
            error: function (errormessage) {
                alert(errormessage.responseText);
            },
            beforeSend: function () { $(".loader").show(); },
            complete: function () { $(".loader").hide(); },
            type: 'POST', dataType: 'json'
        });
    }

    function MainLoad() {
        var tr;
        $.ajax({
            url: urlKPI + "/viewCorporateSum/",
            success: function (result) {
                $.each(result, function (key, item) {
                    tr = $('<tr />');
                    tr.append("<td>" + item.year + "</td>");
                    tr.append("<td>" + item.desc + "</td>");
                    tr.append("<td>" + item.grade + "</td>");
                    tr.append('<td><span class="pull-right">' + formatNumber(item.KPITOT) + "</span></td>");
                    tr.append('<td><a href="javascript:void(0)" data-toggle="tooltip" title="Edit !" onclick="getbyUser(' + item.idkpi + ')"><i class="glyphicon glyphicon-pencil" style="color:red"></i></a></td>');
                    tr.append('<td><a href="javascript:void(0)" data-toggle="tooltip" title="Delete !" onclick="DelKPI(' + item.idkpi + ')"><i class="glyphicon glyphicon-trash" style="color:red"></i></a></td>');
                    $('#MasterInfo').append(tr);
                });
                $('#MasterInfo').DataTable();
            },
            error: function (errormessage) {
                alert(errormessage.responseText);
            },
            beforeSend: function () { $(".loader").show(); },
            complete: function () { $(".loader").hide(); },
            type: 'POST', dataType: 'json'
        });
    }

    function getLoad() {
        var tr;
        $('#tbodytblKPI').empty();
        $.ajax({
            url: urlKPI + "/viewCorporateSum/",
            success: function (result) {
                $.each(result, function (key, item) {
                    tr = $('<tr />');
                    tr.append("<td>" + item.year + "</td>");
                    tr.append("<td>" + item.desc + "</td>");
                    tr.append("<td>" + item.grade + "</td>");
                    tr.append('<td><span class="pull-right">' + formatNumber(item.KPITOT) + "</span></td>");
                    tr.append('<td><a href="javascript:void(0)" data-toggle="tooltip" title="Edit !" onclick="getbyUser(' + item.idkpi + ')"><i class="glyphicon glyphicon-pencil" style="color:red"></i></a></td>');
                    tr.append('<td><a href="javascript:void(0)" data-toggle="tooltip" title="Delete !" onclick="DelKPI(' + item.idkpi + ')"><i class="glyphicon glyphicon-trash" style="color:red"></i></a></td>');
                    $('#tbodytblKPI').append(tr);
                });
            },
            error: function (errormessage) {
                alert(errormessage.responseText);
            },
            beforeSend: function () { $(".loader").show(); },
            complete: function () { $(".loader").hide(); },
            type: 'POST', dataType: 'json'
        });
    }

    function CRUDkpi(type) {
        var res = validateATT();
        if (res == false) {
            alert('fill entry form, completely');
            update = 1;
            return false;
        }
        var kpiObj = {
            idkpi: $('#id').val(),
            iddesc: $('#cbdesc').val(),
            year: $('#year').val(),
            grade: $('#grade').val(),
            KPI1: $('#jan').val(),
            KPI2: $('#feb').val(),
            KPI3: $('#mar').val(),
            KPI4: $('#apr').val(),
            KPI5: $('#may').val(),
            KPI6: $('#jun').val(),
            KPI7: $('#jul').val(),
            KPI8: $('#aug').val(),
            KPI9: $('#sep').val(),
            KPI10: $('#oct').val(),
            KPI11: $('#nov').val(),
            KPI12: $('#dec').val(),
            ch: type

        };

        $.ajax({
            url: urlKPI + "/CRUDkpi",
            data: JSON.stringify(kpiObj),
            type: "POST",
            contentType: "application/json;charset=utf-8",
            beforeSend: function () { $(".loader").show(); },
            complete: function () { $(".loader").hide();; },
            dataType: "json",
            success: function (result) {
                if (result > 0) {
                    BootstrapAlert.success({
                        title: "Message",
                        message: "Add KPI Successfull..."
                    });
                    update = 0;
                    getLoad();
                } else {
                    BootstrapAlert.alert({
                        title: "Message",
                        message: "Add KPI Failed..."
                    });

                }
            },
            error: function (errormessage) {
                alert(errormessage.responseText);
            }
        });
    }

    function DelKPI(id) {
        var ans = confirm("Are you sure you want to delete this Record?");
        if (ans) {
            var kpiObj = {
                idkpi: id,
                ch: 'D'
            };
            $.ajax({
                url: urlKPI + "/CRUDkpi/",
                type: "POST",
                data: JSON.stringify(kpiObj),
                contentType: "application/json;charset=UTF-8",
                dataType: "json",
                success: function (result) {
                    getLoad();
                },
                error: function (errormessage) {
                    alert(errormessage.responseText);
                }
            });
        }
    }

    function getbyUser(id) {
        getView(id);
        $("#myModal").modal({ show: true, backdrop: false })
        $('#btnUpdate').show();
        $('#btnAdd').hide();
    }

    function getView(idkpi) {
        var kpiObj = {
            id: idkpi
        }
        $.ajax({
            url: urlKPI + "/viewCorporate/",
            data: JSON.stringify(kpiObj),
            contentType: "application/json;charset=utf-8",
            success: function (result) {
                $.each(result, function (key, item) {
                    $('#id').val(item.idkpi);
                    $('#year').val(item.year);
                    $('#cbdesc').val(item.iddesc);
                    $('#grade').slider('setValue', item.grade);
                    $("#ex1a").text(item.grade);
                    $('#jan').val(item.KPI1);
                    $('#feb').val(item.KPI2);
                    $('#mar').val(item.KPI3);
                    $('#apr').val(item.KPI4);
                    $('#may').val(item.KPI5);
                    $('#jun').val(item.KPI6);
                    $('#jul').val(item.KPI7);
                    $('#aug').val(item.KPI8);
                    $('#sep').val(item.KPI9);
                    $('#oct').val(item.KPI10);
                    $('#nov').val(item.KPI11);
                    $('#dec').val(item.KPI12);

                });
            },
            error: function (errormessage) {
                alert(errormessage.responseText);
            },
            beforeSend: function () { $(".loader").show(); },
            complete: function () { $(".loader").hide(); },
            type: 'POST', dataType: 'json'
        });

    }


    function clearTextBox() {
        $('#id').val("");
        if (update === 0) {
            $('#year').val("");
            $('#cbdesc').val("");
            $('#grade').slider('setValue', 50);
            $("#ex1a").text(50);
            $('#jan').val(0);
            $('#feb').val(0);
            $('#mar').val(0);
            $('#apr').val(0);
            $('#may').val(0);
            $('#jun').val(0);
            $('#jul').val(0);
            $('#aug').val(0);
            $('#sep').val(0);
            $('#oct').val(0);
            $('#nov').val(0);
            $('#dec').val(0);
        }
        $("#myModal").modal({ show: true, backdrop: false })
        $('#btnUpdate').hide();
        $('#btnAdd').show();
    }

    function validateATT() {
        var isValid = true;
        if ($('#year').val().trim() == "") {
            $('#year').css('border-color', 'Red');
            isValid = false;
        }
        else {
            $('#year').css('border-color', 'lightgrey');
        }

        if ($('#cbdesc').val().trim() == "") {
            $('#cbdesc').css('border-color', 'Red');
            isValid = false;
        }
        else {
            $('#cbdesc').css('border-color', 'lightgrey');
        }
        /*----
        if ($('#grade').val().trim() == "") {
            $('#grade').css('border-color', 'Red');
            isValid = false;
        }
        else {
            $('#grade').css('border-color', 'lightgrey');
        } ---*/
        return isValid;
    }

    function formatNumber(num) {
        return num.toString().replace(/(\d)(?=(\d{3})+(?!\d))/g, "$1,")
    }
</script>