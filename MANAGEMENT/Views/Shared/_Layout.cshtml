@using System.Web.Optimization
<!DOCTYPE html>
<html>

<head>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <!-- Tell the browser to be responsive to screen width -->
    <meta content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no" name="viewport">
    <title>@ViewBag.Title - Management Control</title>
    <style>
        tbody tr {
                cursor: pointer;
            }

        .table-hover tbody tr:hover td {
            background: #ccff99;
        }

        .table-hover tbody tr:hover th {
            background: #b3b3ff;
            color:darkblue;
        }

        .table-striped > tbody > tr:nth-child(odd) > td,
        .table-striped > tbody > tr:nth-child(odd) > th {
            background-color: #ccff99;
         }


        th {
            font-size: 13px;
        }

        td {
            font-size: 12px;
        }
    </style>
    
    
    @Styles.Render("~/Content/css")

    <!-- Google Font  -->
    @Styles.Render("https://fonts.googleapis.com/css?family=Source+Sans+Pro:300,400,600,700,300italic,400italic,600italic")

    @if (IsSectionDefined("Styles"))
        {@RenderSection("Styles", required: false)}
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/jqueryval")
    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/bundles/tools")
    @Scripts.Render("~/bundles/modernizr")
    @Scripts.Render("~/Content/ckeditor/ckeditor.js")
    @Scripts.Render("https://cdn.datatables.net/buttons/1.5.2/js/dataTables.buttons.min.js")
    @Scripts.Render("https://cdnjs.cloudflare.com/ajax/libs/jszip/3.1.3/jszip.min.js")
    @Scripts.Render("https://cdnjs.cloudflare.com/ajax/libs/pdfmake/0.1.36/pdfmake.min.js")
    @Scripts.Render("https://cdnjs.cloudflare.com/ajax/libs/pdfmake/0.1.36/vfs_fonts.js")
    @Scripts.Render("https://cdn.datatables.net/buttons/1.5.2/js/buttons.html5.min.js")
    @Scripts.Render("https://cdn.datatables.net/buttons/1.5.2/js/buttons.print.min.js")
    @Scripts.Render("https://cdn.datatables.net/buttons/1.5.2/js/buttons.flash.min.js")
    @Scripts.Render("https://cdnjs.cloudflare.com/ajax/libs/jquery.mask/1.14.15/jquery.mask.min.js")
    @RenderSection("scripts", required: false)

</head>
<body>

    <div class="wrapper">
        @Html.Partial("_SideMenu")
        @RenderBody()
        @Html.Partial("_Footer")
    </div>

</body>
</html>
<script>
    $(document).ready(function () {
        $('#sidebarCollapse').on('click', function () {
            $('#sidebar').toggleClass('active');
            $(this).toggleClass('active');
        });
    });
    //session end
    var urlRoot = "@Url.Content("~/Dashboard")";
    var sessionTimeoutWarning = @Session.Timeout- 1;

    var sTimeout = parseInt(sessionTimeoutWarning) * 60 * 1000;
    setTimeout('SessionEnd()', sTimeout);

    function SessionEnd() {
        window.location = "../Dashboard/LogOff";
    }
</script>