    var MktTotGrade = 0, MktTotGradeMonth = 0, MktTotGradeSum = 0;
    $(document).ready(function () {
        $('.datetimepicker').datetimepicker({
            format: 'YYYY'
        });


        $('#month').hide();
        $('#monthlyForm').hide();
        $('#childForm').hide();
        $('#monthkpi').hide();
        var userAu = $('#authorid').val();
        if (userAu == "VST") {
            $("#RevTitle").text('');
            $("#RevTitleMonth").text('');
            $("#RevTitleSum").text('');
        }

        var dNow = new Date()
        var iMonth = dNow.getMonth() + 1
        var iYear = dNow.getFullYear()
        $('#prd').val(iYear);
        $('#thn').text('YEAR : ' + iYear);
        getView(iYear);
    });

    function GetPeriode() {
        var newyear = $('#prd').val();
        $('#thn').text('YEAR : ' + newyear);
        getView(newyear);
    }

    function valMonth(bl) {
        var nmonth;        
        switch (bl) {
            case '1':
                nmonth = "JANUARY";
                break;
            case '2':
                nmonth = "FEBRUARY";
                break;
            case '3':
                nmonth = "MARCH";
                break;
            case '4':
                nmonth = "APRIL";
                break;
            case '5':
                nmonth = "MAY";
                break;
            case '6':
                nmonth = "JUNE";
                break;
            case '7':
                nmonth = "JULY";
                break;
            case '8':
                nmonth = "AUGUSTUS";
                break;
            case '9':
                nmonth = "SEPTEMBER";
                break;
            case '10':
                nmonth = "OCTOBER";
                break;
            case '11':
                nmonth = "NOVEMBER";
                break;
            case '12':
                nmonth = "DECEMBER";
                break;
            default:
                nmonth = "KABISAT";
                // code block
        }
        return nmonth;
    }

    function Monthly(){
        $('#month').show();
        $('#monthlyForm').show();
        $('#childForm').show();
        $('#detailForm').hide();
        $('#periode').hide();
        $('#monthkpi').show();

    }

    function Yearly() {
        $('#month').hide();
        $('#monthlyForm').hide();
        $('#childForm').hide();
        $('#detailForm').show();
        $('#periode').show();
        $('#monthkpi').hide();
    }

    function getView(thn) {
        MktScrTot = 0;
        MktTotGrade = 0;
        var userAu = $('#authorid').val();
        var kpiObj = {
            id: thn
        }
        $.ajax({
            url: urlKPI + "/vCORPDept/",
            data: JSON.stringify(kpiObj),
            contentType: "application/json;charset=utf-8",
            success: function (result) {
                $.each(result, function (key, item) {
                    // marketing revenue
                    if (userAu != "VST") {
                        $("#MktGrdRev").text(formatNumber(item.PicGrdRev));
                        $("#MktTgtRev").text(formatNumber(item.PicTgtRev));
                        $("#MktActRev").text(formatNumber(item.PicActRev));
                        $("#MktAchRev").text(formatNumber(item.PicAchRev.toFixed(2)));
                        $("#MktScrRev").text(formatNumber(item.PicScrRev.toFixed(2)));
                        var PicGrdRev = item.PicGrdRev;
                        if (PicGrdRev == 0) {
                            $("#RevTitle").css({ "color": "black", "font-weight": "normal" });
                            $("#MktActRev").css({ "color": "black", "font-weight": "normal" });
                        }
                        else {
                            var newcolor = item.PicScrRev - item.PicGrdRev;
                            if (newcolor >= 0) {
                                $("#RevTitle").css({ "color": "black", "font-weight": "bold" });
                                $("#MktActRev").css({ "color": "black", "font-weight": "bold" });
                            }
                            else {
                                $("#RevTitle").css({ "color": "red", "font-weight": "bold" });
                                $("#MktActRev").css({ "color": "red", "font-weight": "bold" });
                            }
                        }

                        MktScrTot = MktScrTot + item.PicScrRev;;
                        MktTotGrade = MktTotGrade + item.PicGrdRev;
                    }
                    // marketing new customer
                    $("#MktGrdAqu").text(formatNumber(item.PicGrdAqu));
                    $("#MktTgtAqu").text(formatNumber(item.PicTgtAqu));
                    $("#MktActAqu").text(formatNumber(item.PicActAqu));
                    $("#MktAchAqu").text(formatNumber(item.PicAchAqu.toFixed(2)));
                    $("#MktScrAqu").text(formatNumber(item.PicScrAqu.toFixed(2)));
                    var PicGrdAqu = item.PicGrdAqu;
					if (thn == 2020)
						$("#AquTitle").text("New Customer Acquitition medium strategic (min IDR 0.5 Bio p.a)");
                    if (PicGrdAqu == 0) {
                        $("#AquTitle").css({ "color": "black", "font-weight": "normal" });	
                        $("#MktActAqu").css({ "color": "black", "font-weight": "normal" });	
                    }
                    else {
                        var newcolor2 = item.PicScrAqu - item.PicGrdAqu;
                        if (newcolor2 >= 0) {
                            $("#AquTitle").css({ "color": "black", "font-weight": "bold" });
                            $("#MktActAqu").css({ "color": "black", "font-weight": "bold" });

                        }
                        else {
                            $("#AquTitle").css({ "color": "red", "font-weight": "bold" });
                            $("#MktActAqu").css({ "color": "red", "font-weight": "bold" });
                        } 
                    }

                    MktScrTot = MktScrTot + item.PicScrAqu;
                    MktTotGrade = MktTotGrade + item.PicGrdAqu;

                    // DRM
                    $("#MktGrdDrm").text(formatNumber(item.MktGrdDrm));
                    $("#MktTgtDrm").text(formatNumber(item.MktTgtDrm));
                    $("#MktActDrm").text(formatNumber(item.MktActDrm));
                    $("#MktAchDrm").text(formatNumber(item.MktAchDrm.toFixed(2)));
                    $("#MktScrDrm").text(formatNumber(item.MktScrDrm.toFixed(2)));
                    var MktGrdDrm = item.MktGrdDrm;
                    if (MktGrdDrm == 0) {
                        $("#DrmTitle").css({ "color": "black", "font-weight": "normal" });
                        $("#MktActDrm").css({ "color": "black", "font-weight": "normal" });
                    }
                    else {
                        var newcolor3 = item.MktScrDrm - item.MktGrdDrm;
